import telebot
from telebot import types

# توکن رباتت رو اینجا بزار
TOKEN = "8489901741:AAHaxVgKb3TXeFtBUqSw2_qRopg4E_2SGVE"

bot = telebot.TeleBot(TOKEN)

@bot.message_handler(commands=['start'])
def start_message(message):
    bot.send_message(message.chat.id, "ربات استارت شد ✅")

    # ساخت دکمه شیشه‌ای
    markup = types.InlineKeyboardMarkup()
    button = types.InlineKeyboardButton("🤖 ربات فعلاً خاموشه", callback_data="no_action")
    markup.add(button)

    bot.send_message(message.chat.id, "وضعیت ربات:", reply_markup=markup)

@bot.callback_query_handler(func=lambda call: True)
def callback_query(call):
    # کاری انجام نمیشه وقتی روی دکمه زده بشه
    if call.data == "no_action":
        pass

print("ربات فعال شد ✅")
bot.infinity_polling()
