import telebot
from telebot import types

TOKEN = "8489901741:AAHaxVgKb3TXeFtBUqSw2_qRopg4E_2SGVE"
bot = telebot.TeleBot(TOKEN)

@bot.message_handler(commands=['start'])
def start(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    bot_btn = types.KeyboardButton("اتصال به ربات")
    support_btn = types.KeyboardButton("اتصال به پشتیبانی")
    markup.add(bot_btn, support_btn)
    
    bot.send_message(message.chat.id, "ربات استارت شد. چه کاری از دستم بر میاد؟", reply_markup=markup)

@bot.message_handler(func=lambda message: True)
def handle_buttons(message):
    if message.text == "اتصال به ربات":
        bot.send_message(message.chat.id, "کد ربات در حال آپدیت می‌باشد…")
    elif message.text == "اتصال به پشتیبانی":
        bot.send_message(message.chat.id, "برای ارتباط با پشتیبانی روی لینک زیر کلیک کنید:\n@amirlphastam")

bot.polling()
